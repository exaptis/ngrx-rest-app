{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules",
    "typings/main.d.ts",
    "typings/main"
  ],
  "filesGlob": [
    "./client/**/*.ts",
    "client/custom-typings.d.ts",
    "typings/browser.d.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": true
  }
}
