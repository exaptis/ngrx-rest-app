{
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true
  },
  "exclude": [
    "node_modules"
  ],
  "filesGlob": [
    "client/src/**/*.ts"
  ],
  "compileOnSave": false,
  "atom": {
    "rewriteTsconfig": true
  }
}
